{
  "type": "module",
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "skipLibCheck": true,
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["src/__tests__", "node_modules"]
}
