{
  "type": "module",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "declaration": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "Node"
  },
  "include": ["src", "**/*.ts"],
  "exclude": ["src/__tests__", "node_modules"]
}
